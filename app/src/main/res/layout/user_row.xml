<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="@dimen/avatarWidth"
        android:layout_height="@dimen/avatarHeight"
        android:layout_marginStart="@dimen/marginLarge"
        android:layout_marginLeft="@dimen/marginLarge"
        android:layout_marginTop="@dimen/marginRegular"
        android:contentDescription="@string/user_icon_description"
        android:src="@mipmap/user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginLarge"
        android:layout_marginLeft="@dimen/marginLarge"
        android:layout_marginEnd="@dimen/marginRegular"
        android:layout_marginRight="@dimen/marginRegular"
        android:layout_marginTop="@dimen/marginRegular"
        android:text="@string/user_name"
        android:textSize="@dimen/textMedium"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginLarge"
        android:layout_marginLeft="@dimen/marginLarge"
        android:layout_marginEnd="@dimen/marginRegular"
        android:layout_marginRight="@dimen/marginRegular"
        android:layout_marginTop="@dimen/marginSmall"
        android:text="@string/message"
        android:textSize="@dimen/textSmall"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        app:layout_constraintTop_toBottomOf="@+id/txt_username" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border"
        android:layout_marginStart="@dimen/marginLarge"
        android:layout_marginLeft="@dimen/marginLarge"
        android:layout_marginEnd="@dimen/marginRegular"
        android:layout_marginRight="@dimen/marginRegular"
        android:layout_marginTop="@dimen/marginRegular"
        app:layout_constraintTop_toBottomOf="@+id/txt_message"
        app:layout_constraintStart_toEndOf="@+id/img_user"
        tools:layout_editor_absoluteX="-16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>