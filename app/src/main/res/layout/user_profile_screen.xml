<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="150dp"
            android:layout_height="137dp"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/user_profile_image_string"
                android:src="@drawable/ic_user_smal" />

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.cardview.widget.CardView
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            app:cardCornerRadius="40dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="4dp">
            <ImageView
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:contentDescription="@string/camera_icon_string"
                android:src="@drawable/ic_camera" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        app:cardElevation="0dp"
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:padding="20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/user_profile_card_background"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="8dp"
            tools:targetApi="lollipop">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/username_icon_string"
                android:src="@drawable/ic_user_smal" />

            <TextView
                android:id="@+id/userName"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="@string/user_name_string" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:elevation="9dp"
            android:contentDescription="@string/edit_icon_string"
            android:src="@drawable/ic_editiconwithellipse"
            tools:targetApi="lollipop" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/user_profile_card_background"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="8dp"

            tools:targetApi="lollipop">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/person_image_string"
                android:src="@drawable/ic_writing" />

            <TextView
                android:id="@+id/userAbout"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:text="@string/about_status_string" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:elevation="9dp"
            android:contentDescription="@string/edit_icon_string"
            android:src="@drawable/ic_editiconwithellipse"
            tools:targetApi="lollipop" />
    </androidx.cardview.widget.CardView>


</LinearLayout>